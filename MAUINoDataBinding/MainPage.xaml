<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUINoDataBinding.MainPage"
             x:Name="MainContentHolder"
             >

    <Grid>
        <Image Source="background.jpg" Aspect="AspectFill" />
        <VerticalStackLayout Margin="90" Spacing="20">
        <Label Text="Race To 21" 
               FontSize="50"
               TextColor="white"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
            <HorizontalStackLayout Margin ="10" Spacing="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="card_clubs_K.png" Aspect="AspectFit" />
                <Image Source="card_back.png" Aspect="AspectFit"/>
                <Image Source="card_diamonds_J.png" Aspect="AspectFit"/>
            </HorizontalStackLayout>

            <Button
            x:Name="StartButton"
            Text="Start"
            FontSize="40"
            TextColor="white"
            HorizontalOptions="Center"
            BackgroundColor="Red"
            Clicked="Start_Clicked"/>

        </VerticalStackLayout> 
    </Grid>
</ContentPage>

